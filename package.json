{
  "name": "playwright-cucumber-automation-framework",
  "version": "1.0.0",
  "description": "Automation Test Framework using Playwright and Cucumber for automationexercise.com",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --profile default",
    "test:smoke": "cucumber-js --profile smoke",
    "test:regression": "cucumber-js --profile regression",
    "test:ui": "cucumber-js --profile ui",
    "test:api": "cucumber-js --profile api",
    "test:ui:smoke": "cucumber-js --profile ui --tags \"@smoke and @ui\"",
    "test:api:smoke": "cucumber-js --profile api --tags \"@smoke and @api\"",
    "test:login": "cucumber-js --profile ui --tags '@login'",
    "test:registration": "cucumber-js --profile ui --tags '@registration'",
    "test:products": "cucumber-js --profile ui --tags '@products'",
    "test:cart": "cucumber-js --profile ui --tags '@cart'",
    "test:checkout": "cucumber-js --profile ui --tags '@checkout'",
    "test:contact": "cucumber-js --profile ui --tags '@contact'",
    "test:authentication": "cucumber-js --profile ui --tags '@authentication'",
    "test:dev": "cross-env ENV=dev cucumber-js --profile default",
    "test:staging": "cross-env ENV=staging cucumber-js --profile default",
    "test:prod": "cross-env ENV=prod cucumber-js --profile default",
    "test:parallel": "cucumber-js --profile regression",
    "test:parallel:ui": "cucumber-js --profile ui --parallel 3",
    "test:parallel:api": "cucumber-js --profile api --parallel 3",
    "report": "node src/test/report/generate-report.js",
    "serenity:report": "serenity-bdd run",
    "serenity:clean": "rimraf target/site/serenity",
    "clean": "rimraf test-results reports",
    "pretest": "npm run clean",
    "posttest": "npm run report"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "automation",
    "testing",
    "bdd"
  ],
  "author": "Victor Manolache",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.56.1",
    "@serenity-js/console-reporter": "^3.35.2",
    "@serenity-js/core": "^3.35.2",
    "@serenity-js/cucumber": "^3.35.2",
    "@serenity-js/playwright": "^3.35.2",
    "@serenity-js/serenity-bdd": "^3.35.2",
    "@types/node": "^20.11.19",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.5",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "winston": "^3.11.0"
  }
}
