# ========================================
# Environment Variables Template
# ========================================
# Copy this file to .env and update with your values
# Command: cp .env.example .env
#
# IMPORTANT: Never commit .env file to Git!
# ========================================

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Options: dev, staging, prod
# This determines which environment URLs to use
ENV=dev

# ========================================
# BROWSER CONFIGURATION
# ========================================
# Browser to use for tests
# Options: chromium, firefox, webkit
BROWSER=chromium

# Run tests in headless mode (no browser UI)
# Options: true (for CI/CD), false (for local development)
HEADLESS=false

# Slow down operations by specified milliseconds
# Useful for debugging - set to 100-500 to see actions
# Options: 0 (no delay), 100-500 (for debugging)
SLOW_MO=0

# Default timeout for operations in milliseconds
# Increase if tests are timing out
TIMEOUT=30000

# ========================================
# APPLICATION URLs
# ========================================
# Development environment
DEV_URL=https://automationexercise.com

# Staging environment
STAGING_URL=https://automationexercise.com

# Production environment
PROD_URL=https://automationexercise.com

# Optional: Separate API URLs (if different from base URLs)
# DEV_API_URL=https://automationexercise.com/api
# STAGING_API_URL=https://automationexercise.com/api
# PROD_API_URL=https://automationexercise.com/api

# ========================================
# TEST DATA (Optional)
# ========================================
# Note: Tests now create random users via API automatically
# These are only needed for specific test scenarios
# TEST_USER_EMAIL=your-email@example.com
# TEST_USER_PASSWORD=YourPassword123

# ========================================
# REPORTING CONFIGURATION
# ========================================
# Directory for test reports
REPORT_PATH=./reports

# Take screenshot on test failure
# Options: true, false
SCREENSHOT_ON_FAILURE=true

# Record video on test failure
# Options: true, false (videos increase execution time)
VIDEO_ON_FAILURE=false

# ========================================
# CI/CD CONFIGURATION
# ========================================
# Set to true when running in CI environment
# Options: true, false
CI=false
